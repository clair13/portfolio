<div class="container port-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag port_img(@port_item.main_image, 'main'), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @port_item.title %></h1>

      <hr>

      <em><%= @port_item.subtitle %></em>

      <p><%= @port_item.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @port_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="">
          <%= link_to "Edit Item", edit_port_path(@port_item), class: 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>